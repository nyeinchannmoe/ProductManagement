@{
    ViewData["Title"] = "Developer Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .animated-text {
            font-size: 3rem;
            font-weight: bold;
            color: white;
            text-align: center;
            animation: fadeInUp 2s ease-out;
        }

        .animated-text span {
            display: inline-block;
            animation: bounce 2s infinite;
        }

        .animated-text span:nth-child(odd) {
            animation-delay: 0.1s;
        }

        .animated-text span:nth-child(even) {
            animation-delay: 0.2s;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-10px);
            }
            60% {
                transform: translateY(-5px);
            }
        }

        @@media (max-width: 768px) {
            .animated-text {
                font-size: 2rem;
                padding: 0 20px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="animated-text">
            <span>N</span><span>y</span><span>e</span><span>i</span><span>n</span>
            <span>&nbsp;</span>
            <span>C</span><span>h</span><span>a</span><span>n</span>
            <span>&nbsp;</span>
            <span>M</span><span>o</span><span>e</span><span>'</span><span>s</span>
            <span>&nbsp;</span>
            <span>A</span><span>s</span><span>s</span><span>i</span><span>g</span><span>n</span><span>m</span><span>e</span><span>n</span><span>t</span>
        </div>
    </div>

    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Product")';
        }, 3000);
    </script>

</body>
</html>
