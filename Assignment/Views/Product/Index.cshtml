@model IEnumerable<ProductManagement.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="product-management-container">
    <div class="card shadow-sm product-card">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0 text-dark">Product Management</h4>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add Product
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-semibold text-muted">SN</th>
                                <th class="fw-semibold text-muted">Product</th>
                                <th class="fw-semibold text-muted">Description</th>
                                <th class="fw-semibold text-muted">Created</th>
                                <th class="fw-semibold text-muted" style="width: 140px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int counter = 1;}
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td class="fw-medium">@counter</td>
                                    <td class="fw-medium">@product.Name</td>
                                    <td class="text-muted">@(product.Description ?? "N/A")</td>
                                    <td class="text-muted small">@product.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", new { id = product.Id })" 
                                               class="btn btn-sm btn-info text-white" 
                                               title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = product.Id })" 
                                               class="btn btn-sm btn-primary" 
                                               title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = product.Id })" 
                                               class="btn btn-sm btn-danger" 
                                               title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No products found</h5>
                    <p class="text-muted">Start by adding your first product.</p>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add Product
                    </a>
                </div>
            }
        </div>
    </div>
</div>
